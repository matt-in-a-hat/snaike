<%= form_for(@snaike) do |f| %>
  <% if @snaike.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snaike.errors.count, "error") %> prohibited this snaike from being saved:</h2>

      <ul>
      <% @snaike.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="container">
    <div class="row">
      <div class="span12">
        <h2>Create your own snaike</h2>
        <form class="form-inline">
          <pre>
            var MySnake = function (gridWidth, gridHeight) {
              var _this = {};
              //Name used for scoreboard
              _this.name = "<%= f.text_field :name, :required=>"required" %>";
              //CSS body colour
              _this.colour = "<%= f.text_field :colour %>";
              //Strategy
              _this.think = function (<span id="myPosition">myPosition</span>, <span id="myDirection">myDirection</span>, <span id="otherSnakes">otherSnakes</span>) {
                <%= f.text_area :ai, :class=>"ai_input" %>
              };
              return _this;
            };
          </pre>
          <button class="btn btn-primary btn-large" id="test_ai">Test inline</button>
          <button class="btn btn-primary btn-large">Submit snaike</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    $('#myPosition').popover({
      title: "myPosition:",
      content: "Insert documentation here.",
      trigger: "hover",
      placement:"top"
    });
    $('#myDirection').popover({
      title: "myDirection:",
      content: "Insert documentation here.",
      trigger: "hover",
      placement:"top"
    });
    $('#otherSnakes').popover({
      title: "otherSnakes:",
      content: "Insert documentation here.",
      trigger: "hover",
      placement:"top"
    });
  </script>
  <% end %>
