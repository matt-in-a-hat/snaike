<!DOCTYPE html>
<html>
<head>
	<title>SnAIke!</title>
</head>
<body>
<div class="content">

	<div class="centered">
		<h1>Snaike!</h1>

		<div>
			<div>
				<canvas id="game_canvas" width="800" height="400">
				</canvas>
			</div>
		</div>
		<button type="button" id="reset">Restart</button>
	</div>
	<div>
		<% @snaike = Snaike.new %>
		<%= render 'form' %>
	</div>
</div>
<script type="text/javascript">
(function(){
	var f;
	if (typeof window.onload === "function") {
		f = window.onload;
	}
	window.onload = function() {
		if (typeof f === "function") {
			f.apply(arguments);
		}
		if (typeof initSnaikeGame === "function") {
			initSnaikeGame();
		}
	}
})();
</script>
</body>
</html>
